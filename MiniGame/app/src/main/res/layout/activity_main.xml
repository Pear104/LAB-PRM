<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Đường đua 1 -->
    <ImageView
        android:id="@+id/track1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/duongduangua"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- Ngựa 1 (Lottie Animation) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/horse1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/animationhorse2"
        app:lottie_loop="true"
        android:scaleX="-1"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="@id/track1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Đường đua 2 -->
    <ImageView
        android:id="@+id/track2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/duongduangua"
        app:layout_constraintTop_toBottomOf="@id/track1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Ngựa 2 (Lottie Animation) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/horse2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/animationhorse2"
        android:scaleX="-1"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="@id/track2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Vạch đích -->
    <View
        android:id="@+id/finishLine"
        android:layout_width="4dp"
        android:layout_height="220dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="@id/track1"
        app:layout_constraintBottom_toBottomOf="@id/track2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <!-- SeekBar điều chỉnh tốc độ -->
    <SeekBar
        android:id="@+id/speedControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp" />

    <!-- Nút bắt đầu cuộc đua -->
    <Button
        android:id="@+id/startRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu đua!"
        app:layout_constraintBottom_toTopOf="@id/speedControl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
